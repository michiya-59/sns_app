<div class="home_main">
  <div class="posts_main">
      <div class="posts_part">
        <div class="posts_part_left">
          <%= image_tag @user.profile_image_url, class: 'user_image' %>
        </div>
        <div class="posts_part_right">
          <p><%= link_to @user.name, user_path(@user) %></p>
          <p style="font-weight:100;"><%=link_to @post.content, post_path(@post), class: 'content_show_a' %></p>
          <p class="posts_detail_part_time"><%= @post.created_at.to_s(:datetime_jp) %></p>
          <% if @post.liked_by?(current_user) %>
            <%= link_to 'いいねずみ', post_likes_path(@post), method: :delete %>
          <% else %>
            <%= link_to 'いいね', post_likes_path(@post), method: :post %>
          <% end %>
        </div>
      </div>
  </div>
<div>
<div class="posts_btn">
  <% if current_user.present? %>
    <% if @post.user_id == current_user.id %>
      <%= link_to '編集', edit_post_path(@post), class: 'edit_button' %>
      <%= link_to '削除', @post , method: :delete, class: 'delete_button', date: {confirm: "投稿を削除していいですか？"} %>
    <% end %>
  <% end %>
</div>