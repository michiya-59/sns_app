<% if @users.present? %>
  <div class="serach_user_main">
    <div class="user_show_part">
      <% @users.each do |user| %>
        <%= link_to user_path(user.id), class: "serch_user_result" do %>
          <div class="user_part">
            <div class="user_part_left">
              <%= image_tag user.profile_image_url, class: 'user_image' %>
            </div>
            <div class="user_part_right">
              <p><%= user.name %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% elsif @posts.present? %>
  <div class="serach_user_main">
    <div class="user_show_part">
      <% @posts.each do |post| %>
        <div class="post_part">
          <div class="user_part_left">
            <%= image_tag post.user.profile_image_url, class: 'user_image' %>
          </div>
          <div class="user_part_right">
            <%= link_to post.user.name, user_path(post.user) %>
            <%= link_to post.content, post_path(post), class: 'content_show_a' %>
            <%= render 'shared/like_button', { post: post }%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>検索にマッチしませんでした</p>
<% end %>
