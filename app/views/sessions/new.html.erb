<h1 class="posts_h1">ログイン</h1>

<%= form_with(url: login_path,scope: :session,class: 'login_form',local: true) do |f| %>
  <div class="form">
    <%= f.label :email ,'メールアドレス',class: 'login_form_part' %>
    <%= f.text_field :email,class: 'login_form_email' %>
  </div>
  <div class="form">
    <%= f.label :password ,'パスワード',class: 'login_form_part' %>
    <%= f.password_field :password,class: 'login_form_password' %>
  </div>
  <p>会員登録は<%= link_to 'こちら',new_user_path,class: 'entry_link' %></p>
  <%= f.submit 'ログイン',class: 'login_submit' %>
<% end %>
